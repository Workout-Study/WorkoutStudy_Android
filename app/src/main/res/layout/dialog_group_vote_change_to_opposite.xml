<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">


        <TextView
            android:id="@+id/buttonGroupVoteChangeToOpposite"
            style="@style/button_textView"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#E5E8EC"
            android:fontFamily="@font/pretendard_bold"
            android:text="반대로 번복하기"
            android:textColor="#737984"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="296dp"
            android:layout_height="136dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="96dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerGroupVote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textGroupVoteCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="웨이트 운동"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textGroupVoteDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center"
                android:text="OOOO/OO/OO 오후 1:11 ~ 오후 2:22"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/buttonGroupVoteFitMate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="OOO 님의 운동기록에 투표하세요!"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>