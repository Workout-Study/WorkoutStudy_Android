<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/imageViewItemChattingFitMateImage"
        android:layout_width="30dp"

        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_circle"
        android:src="@drawable/ic_baseline_people_24" />

    <TextView
        android:id="@+id/textViewItemChattingFitMateName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewItemChattingFitMateImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:maxLength="5"
        android:text="강현구"
        android:textAppearance="@style/Font.regular16"
        android:textColor="@color/white"
        tools:text="강현구" />

    <Button
        android:id="@+id/buttonItemFitMateExport"
        android:backgroundTint="@color/violet"
        app:layout_constraintStart_toEndOf="@+id/textViewItemChattingFitMateName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        android:layout_width="wrap_content"
        android:textColor="@color/red"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="@string/item_chatting_scr_export"
        android:textAppearance="@style/Font.bold16" />

</androidx.constraintlayout.widget.ConstraintLayout>