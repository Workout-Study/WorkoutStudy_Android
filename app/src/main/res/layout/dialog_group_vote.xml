<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.fitmate.fitmate.domain.model.GroupVoteCertificationDetail" />
        <variable
            name="dialog"
            type="com.fitmate.fitmate.presentation.ui.chatting.dialog.VoteDialog" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/dialog_round_16"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/buttonGroupVoteFitMate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            tools:text="000님의 운동기록에 투표하세요!"
            android:text="@{@string/dialog_vote_item_nickname(data.certificationRequestUserNickname)}"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="96dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/viewPagerGroupVote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/textGroupVoteDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:layout_marginTop="10dp"
                android:gravity="center"
                tools:text="OOOO/OO/OO 오후 1:11 ~ 오후 2:22"
                android:text="@{dialog.formatDateRange(data.fitRecordStartDate,data.fitRecordEndDate)}"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:elevation="0dp"
                android:id="@+id/vote_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#E5E8EC"
                android:textColor="@color/blueGem"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_semibold"
                android:paddingVertical="15dp"
                android:text="보류"
                style="@style/Widget.MaterialComponents.Button" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/vote_opposite_button"
                android:layout_width="wrap_content"
                android:elevation="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#E5E8EC"
                android:textColor="@color/dark_gray"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_semibold"
                android:paddingVertical="15dp"
                android:text="반대"
                style="@style/Widget.MaterialComponents.Button" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/vote_agree_button"
                android:layout_width="wrap_content"
                android:elevation="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/fitmate_blue"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_bold"
                android:paddingVertical="15dp"
                android:text="찬성"
                style="@style/Widget.MaterialComponents.Button" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>