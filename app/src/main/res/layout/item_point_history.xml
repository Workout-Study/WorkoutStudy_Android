<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.fitmate.fitmate.domain.model.PointHistoryContent" />

        <variable
            name="viewHolder"
            type="com.fitmate.fitmate.presentation.ui.point.list.PointHistoryViewHolder" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pointHistoryItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewItemPointHistoryOwnerThumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            tools:src="@drawable/ic_launcher_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewItemPointHistoryOwnerNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/Font.bold16"
            app:layout_constraintStart_toStartOf="@+id/textViewItemPointHistoryMessage"
            app:layout_constraintBottom_toTopOf="@+id/textViewItemPointHistoryMessage"
            tools:text="피트메이트 관리자" />

        <TextView
            android:id="@+id/textViewItemPointHistoryMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@{data.message}"
            android:textAppearance="@style/Font.medium12"
            android:layout_marginStart="12dp"
            android:textColor="@color/dark_gray"
            app:layout_constraintStart_toEndOf="@+id/imageViewItemPointHistoryOwnerThumbnail"
            app:layout_constraintTop_toTopOf="@+id/imageViewItemPointHistoryOwnerThumbnail"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewItemPointHistoryOwnerThumbnail"
            tools:text="피트메이트" />

        <TextView
            android:id="@+id/textViewItemPointHistoryValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/Font.medium12"
            android:textColor="@color/dark_gray"
            app:layout_constraintStart_toStartOf="@+id/textViewItemPointHistoryMessage"
            app:layout_constraintTop_toBottomOf="@+id/textViewItemPointHistoryMessage"
            tools:text="입금 +5,000P" />

        <TextView
            android:id="@+id/textViewPointHistoryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@{viewHolder.formatDateTime(data.createdAt)}"
            android:textAppearance="@style/Font.regular12"
            android:textColor="@color/dark_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewItemPointHistoryOwnerNickName"
            tools:text="2024-04-14" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>