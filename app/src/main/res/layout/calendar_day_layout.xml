<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/textViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/calendarDayText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintHorizontal_bias="0.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Font.regular16"
            android:gravity="center"
            tools:text="22"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/CircleImageViewFitDayDot"
            app:layout_constraintTop_toBottomOf="@+id/calendarDayText"
            app:layout_constraintStart_toStartOf="@+id/calendarDayText"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@color/black"
            android:visibility="invisible"
            android:layout_width="10dp"
            android:layout_height="10dp"/>

        <View
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>