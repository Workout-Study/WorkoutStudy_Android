<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.fitmate.fitmate.domain.model.MyGroupNews" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_rounded_rectangle"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewItemCategoryFitGroupThumbnailContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewItemCategoryFitgroupThumbnail"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_launcher_logo" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textViewItemVoteFitgroupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            tools:text="그룹 이름"
            android:text="그룹 이름(테스트 이후 계산해서 보여줄 예정)"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/turquoise"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cardViewItemCategoryFitGroupThumbnailContainer"
            app:layout_constraintTop_toTopOf="@+id/cardViewItemCategoryFitGroupThumbnailContainer" />

        <TextView
            android:id="@+id/textViewItemVoteFitgroupContext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:textColor="@color/zircon"
            tools:text="강강강강강강강강강강강강님이 최근에 인증을 수행하였습니다"
            android:fontFamily="@font/pretendard_regular"
            android:maxLines="1"
            android:text="@{@string/vote_item_nickname(data.certificationRequestUserNickname)}"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewItemVoteFitgroupTitle"
            app:layout_constraintTop_toBottomOf="@+id/textViewItemVoteFitgroupTitle" />

        <LinearLayout
            android:id="@+id/voteAgreePercentLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewItemVoteFitgroupContext"
            app:layout_constraintTop_toBottomOf="@+id/textViewItemVoteFitgroupContext">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="찬성률"
                android:textColor="@color/white" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/text_S"
                android:max="@{data.agreeCount + data.disagreeCount}"
                tools:progress="@{data.agreeCount}"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:progressDrawable="@drawable/drawable_progress_mint" />

            <TextView
                android:id="@+id/textViewVoteAgreePercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/voteProgressPercentLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/voteAgreePercentLayout"
            app:layout_constraintStart_toStartOf="@+id/voteAgreePercentLayout"
            app:layout_constraintEnd_toEndOf="@+id/voteAgreePercentLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="진행률"
                android:textColor="@color/white" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/text_S"
                android:max="@{data.maxAgreeCount}"
                android:progress="@{data.agreeCount + data.disagreeCount}"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:progressDrawable="@drawable/drawable_progress_mint" />

            <TextView
                android:id="@+id/textViewVoteProgressPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/white" />
        </LinearLayout>


        <TextView
            android:id="@+id/textViewItemVoteFitGroupTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/pretendard_regular"
            android:maxLines="1"
            tools:text="00시간 전"
            android:textColor="@color/zircon"
            app:layout_constraintStart_toStartOf="@+id/voteProgressPercentLayout"
            app:layout_constraintTop_toBottomOf="@+id/voteProgressPercentLayout"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
