<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toos="http://schemas.android.com/tools">

    <data>
        <variable
            name="fragment"
            type="com.fitmate.fitmate.presentation.ui.chatting.ChattingFragment" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayoutForFragmentChatting"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbarFragmentChatting"
                style="@style/Theme.Fitmate.Toolbar"
                android:layout_width="match_parent"
                app:navigationIcon="@drawable/ic_baseline_back_24"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewChattingToolbarTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAppearance="@style/Font.bold20"
                        toos:text="닥치고 스쾉" />

                    <ImageView
                        android:id="@+id/imageViewChattingToolbarForDrawerLayout"
                        android:layout_width="wrap_content"
                        android:onClick="@{() -> fragment.toggleDrawer()}"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/baseline_more_vert_24" />

                </LinearLayout>
            </com.google.android.material.appbar.MaterialToolbar>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFragmentChatting"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toTopOf="@+id/containerKeyBoardArea"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbarFragmentChatting"
                tools:listitem="@layout/item_chatting_chat" />

            <LinearLayout
                android:id="@+id/containerKeyBoardArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_button_gradient"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                app:layout_constraintBottom_toTopOf="@+id/containerExtraFunction">

                <ImageView
                    android:id="@+id/imageViewChattingFragmentOpenContentList"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:onClick="@{() -> fragment.toggleExtraFunctionContainer()}"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_add_24"
                    app:tint="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/chatting_round_container"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextChattingMySpeech"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/white"
                        android:maxLines="4"
                        android:hint="메시지를 입력하세요"
                        android:textColorHint="@color/white"
                        android:scrollbars="vertical"
                        android:textAppearance="@style/Font.regular16" />

                    <ImageView
                        android:id="@+id/ImageViewChattingSendMySpeech"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_circle_chatting_send"
                        android:src="@drawable/right_scroll_btn_icon"
                        app:tint="#2D13B6"
                        android:onClick="@{() -> fragment.chatSend()}"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="6dp"
                        android:backgroundTint="@color/colorClick" />
                </LinearLayout>


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerExtraFunction"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:animateLayoutChanges="false"
                android:animationCache="false"
                android:background="@drawable/linear_button_gradient"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_height="250dp">

                <include
                    android:id="@+id/containerFitOffSituation"
                    layout="@layout/chatting_extra_item_fit_off_situation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:fragment="@{fragment}"
                    app:layout_constraintEnd_toStartOf="@+id/containerFitOffApply"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textViewString="@{@string/chatting_scr_fit_mate_fit_off}"
                    />

                <include
                    android:id="@+id/containerFitOffApply"
                    layout="@layout/chatting_extra_item_apply_fit_off_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:fragment="@{fragment}"
                    app:layout_constraintEnd_toStartOf="@+id/containerFitVote"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/containerFitOffSituation"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textViewString="@{@string/chatting_scr_fit_mate_fit_off_apply}" />

                <include
                    android:id="@+id/containerFitVote"
                    layout="@layout/chatting_extra_item_fit_vote"
                    app:fragment="@{fragment}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toStartOf="@+id/containerFitSituation"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/containerFitOffApply"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textViewString="@{@string/chatting_scr_fit_mate_vote}" />

                <include
                    android:id="@+id/containerFitSituation"
                    layout="@layout/chatting_extra_item_fit_situation"
                    app:fragment="@{fragment}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/containerFitVote"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textViewString="@{@string/chatting_scr_fit_mate_progress}" />

                <include
                    android:id="@+id/containerGroupPointSituation"
                    app:fragment="@{fragment}"
                    layout="@layout/chatting_extra_item_group_point_situation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="@+id/containerFitOffSituation"
                    app:layout_constraintTop_toBottomOf="@+id/containerFitOffSituation"
                    app:layout_constraintEnd_toEndOf="@+id/containerFitOffSituation"
                    app:textViewString="@{@string/chatting_scr_fit_group_point}" />

                <include
                    android:id="@+id/containerCertification"
                    layout="@layout/chatting_extra_item_certification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/containerFitOffApply"
                    app:layout_constraintStart_toStartOf="@+id/containerFitOffApply"
                    app:textViewString="@{@string/chatting_scr_fit_certification}" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationViewChatting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/white"
            android:transitionGroup="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewFragmentChattingFitGroupSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="대화 상대 0"
                    android:textAppearance="@style/Font.semibold20" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewFragmentChattingForFitMateList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/buttonFragmentChattingExit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/baseline_logout_24"
                        app:tint="@color/dark_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="그룹 탈퇴하기"
                        android:textAppearance="@style/Font.bold20"
                        android:textColor="@color/dark_gray" />
                </LinearLayout>

            </LinearLayout>


        </com.google.android.material.navigation.NavigationView>


    </androidx.drawerlayout.widget.DrawerLayout>
</layout>