<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewPermission"
        android:textAppearance="@style/Font.bold20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/violet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_permission_scr_text1"/>

    <ImageView
        android:id="@+id/imageViewCamera"
        android:background="@drawable/ic_circle"
        app:layout_constraintTop_toBottomOf="@+id/textViewPermission"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="9dp"
        android:src="@drawable/ic_baseline_camera_24"
        android:contentDescription="@null"
        app:tint="@color/violet" />

    <TextView
        android:id="@+id/textViewCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_permission_scr_camera"
        app:layout_constraintStart_toEndOf="@+id/imageViewCamera"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@+id/imageViewCamera"
        android:textAppearance="@style/Font.bold16"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_permission_scr_camera_text"
        app:layout_constraintStart_toEndOf="@+id/imageViewCamera"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCamera"
        android:textAppearance="@style/Font.regular12"/>

    <ImageView
        android:id="@+id/imageViewMemory"
        android:background="@drawable/ic_circle"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCamera"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="9dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_baseline_storage_24"
        app:tint="@color/violet" />

    <TextView
        android:id="@+id/textViewMemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_permission_scr_memory"
        app:layout_constraintStart_toEndOf="@+id/imageViewMemory"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@+id/imageViewMemory"
        android:textAppearance="@style/Font.bold16"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_permission_scr_memory_text"
        app:layout_constraintStart_toEndOf="@+id/imageViewCamera"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMemory"
        android:textAppearance="@style/Font.regular12"/>

    <ImageView
        android:id="@+id/imageViewNotification"
        android:background="@drawable/ic_circle"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMemory"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@null"
        android:padding="9dp"
        android:src="@drawable/ic_baseline_notifications_24"
        app:tint="@color/violet" />

    <TextView
        android:id="@+id/textViewNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_permission_scr_notification"
        app:layout_constraintStart_toEndOf="@+id/imageViewNotification"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@+id/imageViewNotification"
        android:textAppearance="@style/Font.bold16"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_permission_scr_notification_text"
        app:layout_constraintStart_toEndOf="@+id/imageViewCamera"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNotification"
        android:textAppearance="@style/Font.regular12"/>

</androidx.constraintlayout.widget.ConstraintLayout>