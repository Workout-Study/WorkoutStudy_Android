<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/onboarding_permission_scr_text1"
        android:textAppearance="@style/Font.bold16"
        android:textColor="@color/violet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewMemory"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_circle"
        android:contentDescription="@null"
        android:padding="12dp"
        android:src="@drawable/ic_baseline_storage_new"
        app:layout_constraintStart_toStartOf="@+id/textViewPermission"
        app:layout_constraintTop_toBottomOf="@+id/textViewPermission" />

    <TextView
        android:id="@+id/textViewMemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/onboarding_permission_scr_memory"
        android:textAppearance="@style/Font.bold12"
        app:layout_constraintStart_toEndOf="@+id/imageViewMemory"
        app:layout_constraintTop_toTopOf="@+id/imageViewMemory" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_permission_scr_memory_text"
        android:textAppearance="@style/Font.regular12"
        app:layout_constraintStart_toStartOf="@+id/textViewMemory"
        app:layout_constraintTop_toBottomOf="@+id/textViewMemory" />

    <ImageView
        android:id="@+id/imageViewNotification"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_circle"
        android:contentDescription="@null"
        android:padding="12dp"
        android:src="@drawable/ic_baseline_alarm_new"
        app:layout_constraintStart_toStartOf="@+id/imageViewMemory"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMemory" />

    <TextView
        android:id="@+id/textViewNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/onboarding_permission_scr_notification"
        android:textAppearance="@style/Font.bold12"
        app:layout_constraintStart_toEndOf="@+id/imageViewNotification"
        app:layout_constraintTop_toTopOf="@+id/imageViewNotification" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_permission_scr_notification_text"
        android:textAppearance="@style/Font.regular12"
        app:layout_constraintStart_toStartOf="@+id/textViewNotification"
        app:layout_constraintTop_toBottomOf="@+id/textViewNotification" />

</androidx.constraintlayout.widget.ConstraintLayout>