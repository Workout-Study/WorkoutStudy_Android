<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.fitmate.fitmate.presentation.viewmodel.MyFitViewModel" />

        <variable
            name="my_fit_main_fragment"
            type="com.fitmate.fitmate.presentation.ui.myfit.MyFitMainFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolBarMyFitMainFragment"
            android:layout_width="match_parent"
            style="@style/Theme.Fitmate.Toolbar"
            app:navigationIcon="@null"
            android:layout_height="wrap_content"
            app:title="My Fit" />

        <LinearLayout
            android:layout_marginHorizontal="15dp"
            android:id="@+id/emptyGroupViewContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:visibility="visible"
            android:background="@drawable/dot_line_myfit_main"
            android:orientation="vertical"
            android:gravity="center"
            app:myfit_group_data_is_empty="@{viewModel.fitProgressItem}">

            <Button
                style="?attr/materialIconButtonOutlinedStyle"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="100dp"
                android:foregroundTint="@color/fitmate_blue"
                android:foreground="@drawable/baseline_add_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textAppearance="@style/Font.regular16"
                android:text="@string/my_fit_main_empty_group_guide_text" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerFitGroupItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/progressShimmer"
                android:layout_width="match_parent"
                android:layout_marginBottom="25dp"
                app:myfit_group_data_shimmer="@{viewModel.fitProgressItem}"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/item_fit_grogress_shimmer"/>
            </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/recyclerviewMyFitFragmentMyFitProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp"
                android:orientation="vertical" />

            <Button
                android:id="@+id/buttonCardViewScrollLeft"
                style="?attr/materialIconButtonFilledTonalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:onClick="@{() -> my_fit_main_fragment.clickButtonViewPagerScrollLeft()}"
                app:icon="@drawable/left_scroll_btn_icon"
                app:layout_constraintBottom_toBottomOf="@+id/recyclerviewMyFitFragmentMyFitProgress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/recyclerviewMyFitFragmentMyFitProgress" />

            <Button
                android:id="@+id/buttonCardViewScrollRight"
                style="?attr/materialIconButtonFilledTonalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:icon="@drawable/right_scroll_btn_icon"
                android:onClick="@{() -> my_fit_main_fragment.clickButtonViewPagerScrollRight()}"
                app:layout_constraintBottom_toBottomOf="@+id/recyclerviewMyFitFragmentMyFitProgress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/recyclerviewMyFitFragmentMyFitProgress" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/containerFitOffAndFirHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="131dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_calendar_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="내 피트오프"
                        android:textAppearance="@style/Font.regular16" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:onClick="@{() -> my_fit_main_fragment.clickEnterMyFitHistoryFragment()}"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_calendar_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/Font.regular16"
                        android:layout_marginTop="10dp"
                        android:text="내 운동기록" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/buttonFitCertificate"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="운동 기록하기"
            android:clickable="true"
            android:onClick="@{() -> my_fit_main_fragment.clickEnterCertificationFragment()}"
            android:layout_marginBottom="24dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginHorizontal="15dp"
            style="@style/button_textView"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>
</layout>